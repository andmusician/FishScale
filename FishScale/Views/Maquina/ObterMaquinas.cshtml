@model IEnumerable<FishScale.Models.Maquina>

<p>
    @Html.ActionLink("Adicionar Nova Máquina", "IncluirMaquina")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SistemaOperacional)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClienteID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SistemaOperacional)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClienteID)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditarMaquina", new { id=item.MaquinaID }) |
            @Html.ActionLink("Excluir", "ExcluirMaquina", new { id=item.MaquinaID })
        </td>
    </tr>
}

</table>
